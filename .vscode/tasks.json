{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "isShellCommand": true,
    "command": "cmd",
    "args": ["/C"],
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [{
        "taskName": "go build",
        "args": ["go", "build", "-o", "${fileDirname}\\${fileBasename}.exe", "${file}"],
        "isBuildCommand": true
    }, {
        "taskName": "go run",
        "args": ["go", "run", "${file}"],
        "isTestCommand": true
    }]
}